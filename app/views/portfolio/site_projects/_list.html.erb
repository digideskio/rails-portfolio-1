<div class="container portfolio_projects">
  <h2>Portfolio</h2>

  <% projects.each do |project| %>
    <div class="col-md-4 col-xs-6">
      <div class="project_container">
        <%= link_to site_item_image(project, :medium), item_path(project) %>
        <%= link_to project.title, item_path(project), class: 'project_name' %>
      </div>
    </div>
  <% end %>

  <div class="clearfix"></div>
  <%= link_to 'See full portfolio', portfolio.portfolio_projects_path(@site.key) %>
</div>

<hr>
