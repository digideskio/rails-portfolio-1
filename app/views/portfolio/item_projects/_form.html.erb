<%= form_for([@item, @item_project]) do |f| %>
  <%= render 'portfolio/shared/form_errors', record: @item_project %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: 'form-control'%>
  </div>
  <div class="actions">
    <%= f.hidden_field :item_id %>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', item_item_projects_path, class: 'btn btn-default' %>
  </div>
<% end %>

<%= render 'images' unless @item_project.new_record? %>
