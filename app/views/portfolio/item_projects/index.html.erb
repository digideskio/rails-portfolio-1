<h1>Listing Projects of "<%= @item.person_name %>"</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_projects.each do |item_project| %>
      <tr>
        <td><%= item_project.name %></td>
        <td><%= item_project.description %></td>
        <td><%= item_project.url %></td>
        <td><%= item_project.item_project_images.count %></td>
        <td><%= link_to 'Edit', edit_item_item_project_path(@item, item_project) %></td>
        <td><%= link_to 'Destroy', [@item, item_project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item project', new_item_item_project_path, class: 'btn btn-primary' %>
<%= link_to 'Back', [:edit, @item], class: 'btn btn-default' %>
