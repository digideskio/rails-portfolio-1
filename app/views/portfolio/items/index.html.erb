<h1>Listing Portfolio Items</h1>

<table class="table">
  <thead>
    <tr>
      <th>Key</th>
      <th>Title</th>
      <th>Links</th>
      <th>Default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.key %></td>
        <td><%= item.title %></td>
        <td><%= link_to item.social_links.count, portfolio_item_social_links_path(item) %></td>
        <td><%= item.default ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_portfolio_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New portfolio item', new_item_path, class: 'btn btn-default' %>
