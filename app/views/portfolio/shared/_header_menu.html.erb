<% if @site.site_menu_links.count > 0 %>
<div class="portfolio_header_menu">
  <%= link_to 'Home', show_portfolio_path(@site.key), class: 'active' %>
  
  <% Portfolio::SiteItem::SUBCLASSES.each do |resource_name| %>
    <% if @site.send(resource_name.pluralize).count > 0 %>
      <% name = resource_name.split('_').last.pluralize %>
      <%= link_to name.humanize, send("portfolio_#{name}_path", @site.key) %>
    <% end %>
  <% end %>
  
  <% @site.site_menu_links.each do |link| %>
    <%= link_to link.name, link.url %>
  <% end %>
</div>
<% end %>
