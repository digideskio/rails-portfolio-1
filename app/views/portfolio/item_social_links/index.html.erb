<h1>Listing Social Links of "<%= @item.person_name %>"</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |portfolio_social_link| %>
      <tr>
        <td><%= portfolio_social_link.social_link.name %></td>
        <td><%= portfolio_social_link.user_name %></td>
        <td><%= link_to 'Edit', edit_item_item_social_link_path(@item, portfolio_social_link) %></td>
        <td><%= link_to 'Destroy', item_item_social_link_path(@item, portfolio_social_link), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Social link', new_item_item_social_link_path(@item), class: 'btn btn-primary' %>
<%= link_to 'Back', edit_item_path(@item), class: 'btn btn-default' %>
