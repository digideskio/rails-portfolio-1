<%= form_for(@site, :html => { :multipart => true }) do |f| %>
  <%= render 'portfolio/shared/form_errors', record: @site %>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :key %>
        <%= f.text_field :key, class: 'form-control' %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :person_name %>
        <%= f.text_field :person_name, class: 'form-control' %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :job_title %>
        <%= f.text_field :job_title, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :greetings %>
        <%= f.text_field :greetings, class: 'form-control' %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="checkbox">
        <label>
          <%= f.check_box :default %>
          Default
        </label>
      </div>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :summary %><br>
        <%= f.text_area :summary, class: 'form-control p_text_area' %>
      </div>
    </div>
  </div>
  

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', sites_path, class: 'btn btn-default' %>
    <% unless @site.new_record? %>
    <%= link_to 'Preview', @site, class: 'btn btn-default' %>
    <%= link_to "Projects (#{@site.site_projects.count})", [@site, :site_projects], class: 'btn btn-default' %>
    <%= link_to "Menu Links (#{@site.site_menu_links.count})", [@site, :site_menu_links], class: 'btn btn-default' %>
    <%= link_to "Social Links (#{@site.site_social_links.count})", [@site, :site_social_links], class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
