<h1>Listing <%= @resource_name.split('_').last.pluralize.downcase %> of "<%= @site.person_name %>"</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.body %></td>
        <td><%= item.url %></td>
        <td><%= item.site_item_images.count %></td>
        <td><%= link_to 'Edit', [:edit, @site, item] %></td>
        <td><%= link_to 'Destroy', [@site, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New #{@resource_name.humanize.downcase}", [:new, :site, @resource_name], class: 'btn btn-primary' %>
<%= link_to 'Back', [:edit, @site], class: 'btn btn-default' %>
